<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:layout_anchorGravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="510dp">
    <TextView
        android:id="@+id/textView"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gusa  picha kuchagua picha ya bidhaa yako"
        android:paddingLeft="30dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher" />
    <EditText
        android:inputType="textMultiLine|textCapSentences"
        android:minHeight="30dp"
        android:textStyle="bold"
        android:layout_marginStart="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginEnd="30sp"
        android:hint="Andika Jina La Bidhaa yako"
        android:layout_marginTop="5dp"
        android:id="@+id/edtName"
        android:layout_below="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:layout_marginStart="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginEnd="30sp"
        android:hint="Andika Thamani ya Bidhaa yako"
        android:layout_marginTop="3dp"
        android:id="@+id/edtPrice"
        android:layout_below="@id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtPrice"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="50sp"
            android:background="@drawable/round_button"
            android:enabled="false"
            android:text="Hifadhi Bidhaa Yako"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnAdd"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50sp"
            android:background="@drawable/round_button"
            android:text="Angalia Bidhaa yako"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20sp" />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>